{% extends 'layouts/base.html.twig' %}

{% block title %}Pinterest!{% endblock %}

{% block body %}
<h1>{{Pluralize(pins|length,'pin')}}</h1>

{% for pin in pins %}
    
<article>

<h2><a href="{{path('app_pins_show', {id:pin.id})}}">{{pin.title}}</a></h2>
<p><a href="#">{{pin.description| u.truncate(10,'...', false)}}</a></p>
<p>Submitted :  {{pin.createdAt|ago}}</p>
</article>
    
{% endfor %}
{% endblock %}
